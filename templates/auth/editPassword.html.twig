{% extends 'base.html.twig' %}

{% block title %}{{ 'title.auth_edit_password'|trans }}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    footer {
      bottom: 0;
      position: fixed;
      width: 100%;
    }
  </style>
{% endblock %}

{% block body %}
    {% form_theme form with ['bootstrap_3_horizontal_layout.html.twig', 'form/form_errors.html.twig'] %}
    <div class="col-sm-12">
        <h1>{{ 'title.auth_edit_password'|trans }}</h1>

        {% if error is defined and error|length %}
            {% include 'default/_single_alert_message.html.twig' with {
                is_single_message: true,
                is_dismissible: false,
                type: 'danger',
                message: error,
            } %}
        {% endif %}

        <div class="col-sm-12" style="margin-bottom: 50px;">
            {{ form_start(form, { method: 'post' }) }}
                {{ form_widget(form) }}
                <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-success" />
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
